<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="5dp"
    app:cardBackgroundColor="#9EFFFFFF"
    app:cardCornerRadius="10dp"
    app:contentPadding="2dp">

    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_margin="2dp"
        android:background="#FFFFFF"
        android:padding="7dp">

        <TextView
            android:id="@+id/reg_course_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="Course Name"
            android:textColor="#B514DF"
            android:textSize="20sp"
             />

        <TextView
            android:id="@+id/reg_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_toEndOf="@+id/reg_course_name"
            android:layout_toRightOf="@+id/reg_course_name"
            android:text="Line 4"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/reg_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reg_name"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_toEndOf="@+id/reg_course_name"
            android:layout_toRightOf="@+id/reg_course_name"
            android:text="Line 5"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/reg_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reg_phone"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_toEndOf="@+id/reg_course_name"
            android:layout_toRightOf="@+id/reg_course_name"
            android:text="Line 6"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            />


    </RelativeLayout>

</androidx.cardview.widget.CardView>









